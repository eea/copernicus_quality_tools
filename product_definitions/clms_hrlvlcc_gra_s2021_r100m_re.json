{
  "description": "HRL Grassland 2021 (100m): DOM-RE",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "raster": "^clms_hrlvlcc_gra_s2021_r100m_(re|RE)_(?P<epsg_code>[0-9]{5})_v[0-9]{2}_r[0-9]{2}"
        },
        "epsg_codes": [
          "32740"
        ],
        "extensions": [
          ".tif"
        ],
        "reference_year": "2021"
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "attribute_regexes": [
          "value",
          "count",
          "area_km2",
          "area_perc",
          "class_name"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "epsg": 32740
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "pixelsize": 100
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "compression": [
          "LZW"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "validcodes": [
          0,
          1,
          255
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "colors": {
          "0": [
            240,
            240,
            240
          ],
          "1": [
            163,
            199,
            56
          ],
          "255": [
            0,
            0,
            0
          ]
        }
      }
    }
  ]
}