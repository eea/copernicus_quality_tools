{
  "description": "HRL Forest Type 2018 (10m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"fty_010m": "^fty_(?P<reference_year>2018)_010m_(?P<aoi_code>eu)_0?3035"},
        "aoi_codes": ["eu"],
        "extensions": [".tif"],
        "reference_year": "2018"
	  }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["fty_010m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "pixelsize": 10
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "validcodes": [0, 1, 2, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "colors": {
          "0":[240, 240, 240],
          "1":[70, 158, 74],
          "2":[28, 92, 36],
          "254":[153, 153, 153],
          "255":[0, 0, 0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "area_pixels": 40,
        "groupcodes": [[1, 2]],
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["fty_010m"]
      }
    }
  ]
}
