{
  "description": "HRL Forest Additional Support Layer 2018 (10m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"raster": "^fadsl_(?P<reference_year>2018)_010m_(?P<aoi_code>eu)_0?3035_v[0-9]{1}_[0-9]{1}"},
        "aoi_codes": ["eu"],
        "extensions": [".tif"],
        "reference_year": "2018"
	  }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["raster"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "pixelsize": 10
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["raster"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "validcodes": [0, 3, 4, 5, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "colors": {
          "0": [240,240,240],
          "3": [204,173,71],
          "4": [255,85,0],
          "5": [168,56,0],
          "254": [153,153,153],
          "255": [0,0,0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["raster"]
      }
    }
  ]
}
