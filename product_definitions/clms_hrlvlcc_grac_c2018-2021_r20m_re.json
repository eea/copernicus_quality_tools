{
  "description": "HRL Grassland Change 2021 (20m): DOM-RE",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "raster": "^clms_hrlvlcc_grac_c2018-2021_r20m_(re|RE)_(?P<epsg_code>[0-9]{5})_v[0-9]{2}_r[0-9]{2}"
        },
        "epsg_codes": [
          "32740"
        ],
        "extensions": [
          ".tif"
        ],
        "reference_year": "2021"
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "attribute_regexes": [
          "value",
          "count",
          "area_km2",
          "area_perc",
          "class_name"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "epsg": 32740
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "pixelsize": 20
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "compression": [
          "LZW"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "validcodes": [
          0,
          1,
          2,
          10,
          255
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "area_pixels": 25,
        "value_exception_codes": [
          0,
          10,
          255
        ],
        "report_exceptions": false,
        "neighbour_exception_codes": [
          255
        ],
        "nodata_value": 255,
        "check_neighbours": false,
        "boundary_source": "boundary_eea38.gpkg"
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "colors": {
          "0": [
            240,
            240,
            240
          ],
          "1": [
            0,
            141,
            246
          ],
          "2": [
            255,
            0,
            0
          ],
          "10": [
            163,
            199,
            56
          ],
          "255": [
            0,
            0,
            0
          ]
        }
      }
    }
  ]
}