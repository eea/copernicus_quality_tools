{
  "description": "HRL Dominant Leaf Type Change 2012-2015 (20m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"dltc_020m": "^dltc_1215_020m_(?P<aoi_code>eu)_0?3035_v[0-9]{1}_[0-9]{1}"},
        "aoi_codes": ["eu"],
        "extensions": [".tif"],
        "reference_year": "2015"
	  }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["dltc_020m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "pixelsize": 20
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "validcodes": [0, 1, 2, 3, 4, 10, 12, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "colors": {
          "0": [255,255,255],
          "1": [20,255,20],
          "2": [0,150,0],
          "3": [255, 0, 0],
          "4": [255, 128, 0],
          "10": [191, 191, 191],
          "12": [220, 220, 10],
          "254": [153,153,153],
          "255": [0,0,0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "area_pixels": 25,
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["dltc_020m"]
      }
    }
  ]
}
