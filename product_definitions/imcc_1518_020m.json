{
  "description": "HRL Imperviousness Change Classified 2015 - 2018 (20m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "imcc_020m": "^imcc_1518_020m_"
        },
        "reference_year": "2018",
        "extensions": [".tif"]
      }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["imcc_020m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "pixelsize": 20
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "validcodes": [0, 1, 2, 10, 11, 12, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"],
        "colors": {
          "0": [3, 102, 0],
          "1": [255, 0, 0],
          "2": [0, 100, 0],
          "10": [156, 156, 156],
          "11": [255, 191, 0],
          "12": [64, 178, 0],
          "254": [255, 0, 255],
          "255": [0, 0, 0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["imcc_020m"]
      }
    }
  ]
}
