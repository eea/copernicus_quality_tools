{
  "description": "HRL Share of Built up Change classified 2024 (100m): DOM-GP",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "raster": "^clms_nvlcc_sbcc_c2021-2024_r100m_(gp|GP)_(?P<epsg_code>[0-9]{5})_v[0-9]{2}_r[0-9]{2}"
        },
        "epsg_codes": [
          "32620"
        ],
        "extensions": [
          ".tif"
        ],
        "reference_year": "2024"
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "attribute_regexes": [
          "value",
          "count",
          "area_km2",
          "area_perc",
          "class_name"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "epsg": 32620
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "pixelsize": 100
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "compression": [
          "LZW"
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "validcodes": [
          0,
          1,
          2,
          10,
          11,
          12,
          255
        ]
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": [
          "raster"
        ],
        "colors": {
          "0": [
            240,
            240,
            240
          ],
          "1": [
            255,
            0,
            0
          ],
          "2": [
            0,
            100,
            0
          ],
          "10": [
            156,
            156,
            156
          ],
          "11": [
            255,
            191,
            0
          ],
          "12": [
            64,
            178,
            0
          ],
          "255": [
            0,
            0,
            0
          ]
        }
      }
    }
  ]
}