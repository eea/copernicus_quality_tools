                            "OR",
                            " (layer.code_1_21 = 1",
                            "  AND layer.code_4_21 NOT IN (1210, 1220, 8110, 8120)",
                            "  AND EXISTS (SELECT FROM neighbours(meta.fid) WHERE code_4_21 IN (1210, 1220))",
                            "  AND layer.area_ha >= 0.25)",
                            "OR",
                            " (layer.code_1_21 > 1",
                            "  AND EXISTS (SELECT FROM neighbours(meta.fid) WHERE code_4_21 IN (1210, 1220, 8110, 8120))",
                            "  AND layer.area_ha >= 0.05)",
                            "OR",
                            " (layer.comment_21 IS NOT NULL",
