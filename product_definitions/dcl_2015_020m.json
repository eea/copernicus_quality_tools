{
  "description": "HRL Forest Derived Correction Layer 2015 (20m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"dcl_020m": "^dcl_(?P<reference_year>2015)_020m_"},
        "extensions": [".tif"],
        "reference_year": "2015"
	  }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["dcl_020m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "pixelsize": 20
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "validcodes": [0, 1, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"],
        "area_pixels": 25,
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["dcl_020m"]
      }
    }
  ]
}
