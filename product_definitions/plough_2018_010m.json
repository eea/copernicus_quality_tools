{
  "description": "HRL Ploughing Indicator 2018 (10m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "raster": "^plough_2018_010m_(?P<aoi_code>eu)_0?3035_v[0-9]{1}_[0-9]{1}"
        },
        "aoi_codes": ["eu"],
        "extensions": [".tif"],
        "reference_year": "2018"
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["raster"]
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "pixelsize": 10
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["raster"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "validcodes": [0, 1, 2, 3, 4, 5, 6, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "colors": {
          "0": [240, 240, 240],
          "1": [128, 0, 0],
          "2": [199, 60, 18],
          "3": [230, 107, 37],
          "4": [247, 153, 59],
          "5": [252, 201, 91],
          "6": [255, 236, 140],
          "254":[153, 153, 153],
          "255":[0, 0, 0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "area_pixels": 3,
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "outside_area_code": 255
      }
    }
  ]
}
