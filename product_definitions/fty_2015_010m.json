{
  "description": "HRL Forest Type 2015 (10m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layers":{"forest_type": "^fty_(?P<reference_year>[0-9]{4})_010m_(?P<country_code>.+)_[0-9]{5}.*.tif$"},
        "file_name_regex": "^fty_(?P<reference_year>[0-9]{4})_010m_(?P<country_code>.+)_[0-9]{5}.*.tif$",
        "extensions": [".tif", ".tfw", ".xml|.tif.xml", ".tif.vat.dbf"],
        "country_codes": ["al", "at",
                          "ba", "be", "bg",
                          "ch", "cy", "cz",
                          "de", "dk",
                          "ee", "es", "es_cn", "eu",
                          "fi", "fr", "fr_glp", "fr_guf", "fr_mtq", "fr_myt", "fr_reu",
                          "gr",
                          "hr", "hu",
                          "ie", "is", "it",
                          "li", "lt", "lu", "lv",
                          "me", "mk", "mt",
                          "nl", "no",
                          "pl", "pt", "pt_raa", "pt_ram", "pt_raa_ceg", "pt_raa_weg",
                          "ro",
                          "se", "si", "sk",
                          "tr",
                          "uk", "uk_ni", "uk_ge", "uk_je",
                          "xk"]
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "epsg": [3035]
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "pixelsize": 10
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["forest_type"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "validcodes": [0, 1, 2, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "mask": "default",
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "area_pixels": 50,
        "groupcodes": [[1, 2]],
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["forest_type"],
        "colors": {
          "0":[240, 240, 240],
          "1":[70, 158, 74],
          "2":[28, 92, 36],
          "254":[153, 153, 153],
          "255":[0, 0, 0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["forest_type"]
      }
    }
  ]
}
