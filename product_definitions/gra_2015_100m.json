{
  "description": "HRL Grassland 2015 (100m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names": {
          "gra_100m": "^gra_(?P<reference_year>[0-9]{4})_100m_(?P<aoi_code>.+)_[0-9]{5}.*.tif$"
        },
        "extensions": [".tif", ".tfw", ".xml|.tif.xml", ".tif.vat.dbf"],
        "aoi_codes": ["al", "at",
                          "ba", "be", "bg",
                          "ch", "cy", "cz",
                          "de", "dk",
                          "ee", "es", "es_cn", "eu",
                          "fi", "fr", "fr_glp", "fr_guf", "fr_mtq", "fr_myt", "fr_reu",
                          "gr",
                          "hr", "hu",
                          "ie", "is", "it",
                          "li", "lt", "lu", "lv",
                          "me", "mk", "mt",
                          "nl", "no",
                          "pl", "pt", "pt_raa", "pt_ram", "pt_raa_ceg", "pt_raa_weg",
                          "ro",
                          "se", "si", "sk",
                          "tr",
                          "uk", "uk_ni", "uk_ge", "uk_je",
                          "xk"]
      }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["gra_100m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "attribute_regexes": ["value", "count", "(km2|area_km2)", "(perc|area_perc)"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "epsg": [3035]
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "pixelsize": 100
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "validcodes": [0, 1, 2, 254, 255]
      }
    },
     {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"],
        "colors": {
          "0":[240, 240, 240],
          "1":[163, 199, 56],
          "254":[153, 153, 153],
          "255":[0, 0, 0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["gra_100m"]
      }
    }
  ]
}
