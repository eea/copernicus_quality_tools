{
  "description": "Urban Atlas 2012 Building Heights",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"raster": "^(?P<aoi_code>[a-z0-9]+)_[a-z0-9_]+_ua2012_dhm\\.tif$"},
        "aoi_codes": ["*"],
        "extensions": [".tif"],
        "reference_year": "2012"
	  }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["raster"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "pixelsize": 10
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "grid_size": 1
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "datatype": "UInt16"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "validcodes": [[0, 1000], 65535]
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "max_blocksize": 256
      }
    },
    {
      "check_ident": "qc_tool.raster.nodata",
      "required": false,
      "parameters": {
        "layers": ["raster"],
        "nodata_value": 65535
      }
    }
  ]
}
