{
  "description": "HRL Tree Cover Change Mask 2015-2018 (20m)",
  "steps": [
    {
      "check_ident": "qc_tool.raster.unzip",
      "required": true
    },
    {
      "check_ident": "qc_tool.raster.naming",
      "required": true,
      "parameters": {
        "layer_names":{"tccm_020m": "^tccm_1518_020m_(?P<aoi_code>eu)_0?3035"},
        "extensions": [".tif"],
        "aoi_codes": ["eu"],
        "reference_year": "2018"
	  }
    },
    {
      "check_ident": "qc_tool.raster.format",
      "required": true,
      "parameters": {
        "layers": ["tccm_020m"],
        "formats": [".tif"],
        "drivers": {".tif": "GTiff"}
      }
    },
    {
      "check_ident": "qc_tool.raster.attribute",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "attribute_regexes": ["value", "count", "area_km2", "area_perc", "class_name"]
      }
    },
    {
      "check_ident": "qc_tool.raster.epsg",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "epsg": 3035
      }
    },
    {
      "check_ident": "qc_tool.raster.pixel_size",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "pixelsize": 20
      }
    },
    {
      "check_ident": "qc_tool.raster.origin",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"]
      }
    },
    {
      "check_ident": "qc_tool.raster.bit_depth",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "datatype": "byte"
      }
    },
    {
      "check_ident": "qc_tool.raster.compress",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "compression": ["LZW"]
      }
    },
    {
      "check_ident": "qc_tool.raster.value",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "validcodes": [0, 1, 2, 254, 255]
      }
    },
    {
      "check_ident": "qc_tool.raster.color",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "colors": {
          "0": [240,240,240],
          "1": [70,158,74],
          "2": [28,92,36],
          "254": [153,153,153],
          "255": [0,0,0]
        }
      }
    },
    {
      "check_ident": "qc_tool.raster.tile",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "max_blocksize": 1024
      }
    },
    {
      "check_ident": "qc_tool.raster.mmu",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "area_pixels": 25,
        "value_exception_codes": [254, 255],
        "neighbour_exception_codes": [254, 255],
        "nodata_value": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.gap",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"],
        "outside_area_code": 255
      }
    },
    {
      "check_ident": "qc_tool.raster.inspire",
      "required": false,
      "parameters": {
        "layers": ["tccm_020m"]
      }
    }
  ]
}
